{
    "singleQuote": true,
    "printWidth": 140,
    "trailingComma": "none",
    "endOfLine": "auto",
    "useTabs": false,
    "tabWidth": 2,
    "overrides": [
      {
        "files": "*.component.html",
        "options": {
          "parser": "angular"
        }
      },
      {
        "files": "*.html",
        "options": {
          "parser": "html"
        }
      }
    ]
}